<div class='nested-fields'>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-input form-control" %>


    <%= f.fields_for :items do |item_builder| %>
      <%= item_builder.label :quantity %>
      <%= item_builder.text_field :quantity, class: "form-input form-control" %>
    <% end %>
    <br>
    <%= link_to_remove_association "remove ingredient", f, class: "form-button btn btn-default" %>
    <br>
</div>
