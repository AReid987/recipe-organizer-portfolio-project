<li class="dropdown user user-menu">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#">
    <img alt="User Image" class="user-image" src="http://placehold.it/160x160" />
  <span class="hidden-xs"><%= current_user.name %></span>
  </a>
  <ul class="dropdown-menu">
    <li class="user-header">
      <img class="img-circle" alt="User Image" src="http://placehold.it/160x160"> </img>
      <p>
        <%= current_user.name %> - <%= current_user.email %>
        <small>Member since <%= current_user.created_at.strftime("%B %Y") %></small>
      </p>
    </li>
    <li class="user-body">
      <div class="col-xs-4 text-center">
        <a href="#"> Followers</a>
      </div>
      <div class="col-xs-4 text-center">
        <a href="#"> Sales</a>
      </div>
      <div class="col-xs-4 text-center">
        <a href="#"> Friends</a>
      </div>
    </li>
    <li class="user-footer">
      <div class="pull-left">
        <%= link_to "Profile", user_path(current_user.id), class: "btn btn-default btn-flat" %>
      </div>
      <div class="pull-right">
        <%= link_to "Log Out", signout_path, method: :delete, class: "btn btn-default btn-flat" %>
      </div>
    </li>
  </ul>
</li>
